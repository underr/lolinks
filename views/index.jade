include header

body
 .container
  #add
   h3 ♥ lolinks ♥

    form(action="add", method="post")
     label Título
     input(type="text", name="title", placeholder=inptitle, size="20", autofocus="autofocus")
     label URL
     input(type="text", name="url", placeholder="URL (http://)", size="34")
     br
     label Descrição (max 70 caracteres)
     input(type="text", name="dcr", placeholder=inpdescr, size="60", heigth="5")
     br
     input(type="submit", value="Enviar~")
  .container.one-half.column 
   - for(bookmark in bookmarks) {
    a(href=bookmarks[bookmark].url, title=bookmarks[bookmark].id)= bookmarks[bookmark].title
    |  · #{bookmarks[bookmark].date}
    p#dcr #{bookmarks[bookmark].dcr}
   - }

  br
  #pager
     each val in tpages
      a(href= val, class='pag')
        = val
